<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#000000"
    tools:context=".activity.WelcomeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="264dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_appathon_name_line"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="347dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/medium"
                    android:text="Welcome to the official app of Appathon 21'"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="21dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    tools:layout_editor_absoluteX="31dp" />

                <TextView
                    android:id="@+id/timeline"
                    android:layout_width="73dp"
                    android:layout_height="23dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/bold"
                    android:gravity="center_vertical"
                    android:text="Timeline"
                    android:textColor="#FBE4FF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/timeline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:srcCompat="@drawable/ic_timelinelogonew"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/timeline_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/book"
                    android:lineSpacingExtra="6dp"
                    android:text="Get Regular Updates about what's happening when and never miss another event or Review."
                    android:textColor="#CABDBD"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/timeline" />

                <TextView
                    android:id="@+id/partners"
                    android:layout_width="73dp"
                    android:layout_height="23dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/bold"
                    android:gravity="center_vertical"
                    android:text="Partners"
                    android:textColor="#FBE4FF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/partner"
                    app:layout_constraintTop_toBottomOf="@id/timeline_text" />

                <ImageView
                    android:id="@+id/partner"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/partners"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/timeline_text"
                    app:srcCompat="@drawable/ic_partnerlogonew"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/partner_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/book"
                    android:lineSpacingExtra="6dp"
                    android:text="Find out about the Amazing Brands and People who helped us create this wonderful sprint of innovation called Appathon’21."
                    android:textColor="#CABDBD"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/partner"
                    app:layout_constraintTop_toBottomOf="@+id/partners" />

                <TextView
                    android:id="@+id/tracks"
                    android:layout_width="73dp"
                    android:layout_height="23dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/bold"
                    android:gravity="center_vertical"
                    android:text="Tracks"
                    android:textColor="#FBE4FF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/tracks_img"
                    app:layout_constraintTop_toBottomOf="@+id/partner_text" />

                <ImageView
                    android:id="@+id/tracks_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/partners"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/partner_text"
                    app:srcCompat="@drawable/ic_trackslogonew"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tracks_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/book"
                    android:lineSpacingExtra="6dp"
                    android:text="Explore a wide range of Tracks inspired from UN’s Sustainable Development Goals to create something wonderful."
                    android:textColor="#CABDBD"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tracks_img"
                    app:layout_constraintTop_toBottomOf="@+id/tracks" />

                <TextView
                    android:id="@+id/FAQ"
                    android:layout_width="73dp"
                    android:layout_height="23dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/book"
                    android:gravity="center_vertical"
                    android:text="FAQs"
                    android:textColor="#FBE4FF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/faq_img"
                    app:layout_constraintTop_toBottomOf="@+id/tracks_text" />

                <ImageView
                    android:id="@+id/faq_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/tracks"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tracks_text"
                    app:srcCompat="@drawable/ic_faqlogonew"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/faq_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/book"
                    android:lineSpacingExtra="6dp"
                    android:text="Still have some doubts or concerns. Feel free to checkout the FAQ section to find answers to most of your worries."
                    android:textColor="#CABDBD"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/faq_img"
                    app:layout_constraintTop_toBottomOf="@+id/FAQ" />

                <ImageView
                    android:id="@+id/startbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/faq_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>